startshape TREE

rule TREE {
  BRANCH { }
  BRANCH { flip 90 }
}

//rule BRANCH 98 {
rule BRANCH {
  CIRCLE { }
  CIRCLE { size 0.9 brightness 1 }
  BRANCH { y 0.2 size 0.99 rotate 3 }
}

